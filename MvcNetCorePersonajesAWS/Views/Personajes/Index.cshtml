@model IEnumerable<MvcNetCorePersonajesAWS.Models.Personaje>

@{
    ViewData["Title"] = "Index";
}

<style>
	.table {
		width: 100%;
		border-collapse: collapse;
	}

		.table th, .table td {
			border: 1px solid #ddd;
			padding: 8px;
		}

		.table th {
			background-color: #f2f2f2;
			text-align: left;
		}

		.table tr:hover {
			background-color: #f1f1f1;
		}
</style>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPersonaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPersonaje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <img src="@item.Imagen" style="width: 150px" />
            </td>
			<td>
				<a asp-action="Edit" asp-route-id="@item.IdPersonaje">Edit</a> |
				<a asp-action="Details" asp-route-id="@item.IdPersonaje">Details</a> |
				<a asp-action="Delete" asp-route-id="@item.IdPersonaje">Delete</a>
			</td>
        </tr>
}
    </tbody>
</table>
